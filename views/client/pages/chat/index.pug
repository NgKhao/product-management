extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main 
  .container.my-3 
    .row 
      .col-12 
        +box-head("Chat")

    .row 
      .col-12 
        //- user là biến locals trong user.middleware 
        //- gán user.id cho my-id để lấy xử lý bên chat.js 
        .chat(my-id=user.id)
          .inner-body 
            each chat in chats 
              //- check userId của tin nhắn có phải là của user login không 
              div(class=(chat.infoUser.id == user.id ? "inner-outgoing" : "inner-incoming")) 
                //- nếu không phải user login vào thì mới hiện 
                if(chat.infoUser.id != user.id) 
                  .inner-name #{chat.infoUser.fullName}
                if(chat.content)
                  .inner-content
                    | #{chat.content}
                if(chat.images)
                  .inner-images
                    each image in chat.images
                      img(src=image)
            div(class="inner-list-typing")  

          .inner-preview-images
            div(class="custom-file-container" data-upload-id="upload-image")

          .inner-foot 
            form(
              class="inner-form"
              action=""
            )
              input(
                type="text"
                placeholder="Nhap noi dung..."
                name="content"
              )
              //- dùng label để use for="" vào id="" của input của img trong thư viện 
              label(
                for="file-upload-with-preview-upload-image"
                class="btn btn-light mx-2 mb-0") 
                i.fa-regular.fa-image
              span(class="button-icon btn btn-light mx-2") 
                i.fa-regular.fa-face-smile
              button 
                i.fa-solid.fa-paper-plane
                //- icon trong fontawesome 
  div(class="tooltip" role="tooltip")
    emoji-picker(class="light")
